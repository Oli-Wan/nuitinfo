<div class="row">
    <div class="row">
        <div class="twelve columns centered">
            <h2>Découvrez le patrimoine Strasbourgeois</h2>

            <%= link_to 'Ajouter un élément de patrimoine', new_item_path, class: "button", style: "margin-bottom:10px;" %>

            <table class="twelve">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% @items.each do |item| %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.content %></td>
                        <td><%= link_to 'Voir', item, class: "small button" %></td>
                        <td><%= link_to 'Editer', edit_item_path(item), class: "small button" %></td>
                        <td><%= link_to 'Supprimer', item, class: "small button", method: :delete, data: {confirm: 'Are you sure?'} %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>


