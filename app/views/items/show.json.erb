{
    "name": "<%= @item.name %>",
    "content": "<%= @item.content%>",
    "date": "<%= @item.date %>",
    "published": <%= @item.published %>,
    "longitude": "<%= @item.longitude %>",
    "latitude": "<%= @item.latitude %>",
    "altitude": "<%= @item.altitude %>",
    "content_type": "<%= @item.content_type %>",
    "author_id": <%= @item.author ? @item.author.id : 'null' %>,
    "parent_id": <%= @item.parent ? @item.parent.id : 'null' %>,
    "tags": [
        <% @item.tags.each do |tag| %>
        {
            "id": <%= tag.id %>,
            "name": "<%= tag.name%>"
        }
        <% if tag != @item.tags.last %>
        ,
        <% end%>
        <% end %>
    ],
    "media": [
        <% @item.mediums.each do |medium| %>
        {
            "id": <%= medium.id %>,
            "name": "<%= medium.name %>",
            "media_url": "<%= medium.media_url%>",
            "description": "<%= medium.description%>"
        }
        <% if medium != @item.mediums.last %>
        ,
        <% end%>
        <% end %>
    ],
    "children": [
        <% @item.children.each do |child| %>
        {
            "name": "<%= child.name %>",
            "content": "<%= child.content%>",
            "date": "<%= child.date %>",
            "published": <%= child.published %>,
            "longitude": "<%= child.longitude %>",
            "latitude": "<%= child.latitude %>",
            "altitude": "<%= child.altitude %>",
            "content_type": "<%= child.content_type %>"
        }
        <% if child != @item.children.last %>
        ,
        <% end%>
        <%end%>
    ]
}